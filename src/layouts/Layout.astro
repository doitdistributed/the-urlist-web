---
import "../styles/global.css";
import { ThemeToggle } from "../components/ThemeToggle";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "The Urlist - Create and Share Lists of Links",
  description = "Create and share collections of links with a beautiful, easy-to-share URL. Perfect for sharing resources, reading lists, or any collection of links.",
} = Astro.props;

const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site ?? "https://theurlist.com"
);
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="flex min-h-screen flex-col bg-white text-gray-900 relative overflow-x-hidden antialiased">
    <!-- Subtle gradient accents -->
    <div class="fixed inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(21,191,174,0.05),transparent_70%)]"></div>
    <div class="fixed inset-0 bg-[radial-gradient(circle_at_70%_60%,rgba(3,165,119,0.05),transparent_70%)]"></div>

    <nav class="sticky top-0 z-20 backdrop-blur-lg border-b border-[#15BFAE]/10">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 flex items-center justify-between">
        <a
          href="/"
          class="text-xl font-bold text-[#03A678] hover:text-[#15BFAE] transition-all duration-300 flex items-center gap-2"
        >
          <img src="/favicon.svg" alt="" class="w-6 h-6" />
          The Urlist
        </a>
        <div class="flex items-center ml-auto">
          <!-- Hamburger for mobile -->
          <button id="nav-toggle" class="block lg:hidden p-2 rounded focus:outline-none focus:ring-2 focus:ring-[#15BFAE]" aria-label="Open navigation" onclick="document.getElementById('nav-menu').classList.toggle('hidden')">
            <svg class="w-6 h-6 text-[#03A678]" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
          <ul id="nav-menu" class="hidden lg:flex gap-6 items-center ml-6 bg-white lg:bg-transparent absolute lg:static top-full right-0 mt-2 lg:mt-0 shadow-lg lg:shadow-none rounded-lg lg:rounded-none p-4 lg:p-0 min-w-[180px] lg:min-w-0">
            <li>
              <a href="/lists" class="block text-gray-700 hover:text-[#15BFAE] font-medium transition-colors duration-200 py-2 lg:py-0">My Lists</a>
            </li>
            <li>
              <a href="/about" class="block text-gray-700 hover:text-[#15BFAE] font-medium transition-colors duration-200 py-2 lg:py-0">About</a>
            </li>
            <li>
              <a href="/terms" class="block text-gray-700 hover:text-[#15BFAE] font-medium transition-colors duration-200 py-2 lg:py-0">Terms</a>
            </li>
          </ul>
          <div class="ml-4">
            <ThemeToggle client:only="react" />
          </div>
        </div>
      </div>
      <script>
        // Hide nav menu on resize to large screens
        window.addEventListener('resize', () => {
          if (window.innerWidth >= 1024) {
            document.getElementById('nav-menu')?.classList.add('hidden');
          }
        });
      </script>
    </nav>

    <main class="flex-grow relative z-10">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </div>
    </main>

    <footer class="relative z-10 py-8 backdrop-blur-lg border-t border-[#15BFAE]/10 mt-auto">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center text-gray-600">
        <p>&copy; {new Date().getFullYear()} The Urlist. Share your links with the world.</p>
      </div>
    </footer>
  </body>
</html>
